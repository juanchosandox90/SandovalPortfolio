<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBg"
    tools:context=".ui.activities.WorkDetailsActivity">

    <ImageView
        android:id="@+id/workImageDetailIv"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_account_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workCompanyNameTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Company Name"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workImageDetailIv" />

    <TextView
        android:id="@+id/workCompanyRoleTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Android Developer"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/workCompanyNameTxt"
        app:layout_constraintStart_toStartOf="@+id/workCompanyNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/workCompanyNameTxt" />

    <TextView
        android:id="@+id/workDescriptionTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Description work"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/workCompanyRoleTxt"
        app:layout_constraintStart_toStartOf="@+id/workCompanyRoleTxt"
        app:layout_constraintTop_toBottomOf="@+id/workCompanyRoleTxt" />

    <TextView
        android:id="@+id/webSiteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/website_title"
        android:textColor="@android:color/white"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/workStarDateTxt"
        app:layout_constraintTop_toBottomOf="@+id/workStarDateTxt" />

    <TextView
        android:id="@+id/webSitePageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="www.company.com"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/webSiteTitle"
        app:layout_constraintTop_toBottomOf="@+id/webSiteTitle" />

    <TextView
        android:id="@+id/workStarDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="27-12-2014"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/workDescriptionTxt"
        app:layout_constraintTop_toBottomOf="@+id/workDescriptionTxt" />

    <TextView
        android:id="@+id/workEndDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="27-10-2015"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/workStarDateTxt"
        app:layout_constraintTop_toTopOf="@+id/workStarDateTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>